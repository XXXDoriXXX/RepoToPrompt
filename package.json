{
  "name": "repo-to-prompt",
  "productName": "RepoToPrompt",
  "description": "Prepare your codebase for LLM context instantly",
  "version": "1.1.0",
  "main": "dist/main.js",
  "author": "DORI",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.dori.repotoprompt",
    "productName": "RepoToPrompt",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5.5.3"
  },
  "private": true,
  "dependencies": {
    "glob": "^13.0.0",
    "ignore": "^7.0.5",
    "isbinaryfile": "^5.0.7",
    "js-tiktoken": "^1.0.21"
  }
}
